@model UserCreateViewsModel;
@{ 
    ViewBag.Title = "User Create ViewModel";
    var roles = ViewBag.Roles as IQueryable<IdentityRole>;
}
    
    <form enctype="multipart/form-data" asp-controller="User" asp-action="Create" method="post">
        @*<div class="text-danger" asp-validation-summary="All"></div>*@
        <div class="form-group row">
            <label class="col-sm-2 col-form-label text-white" asp-for="Email"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Email" placeholder="Name">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label  text-white" asp-for="Password"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Password" placeholder="Password">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label  text-white" asp-for="CofimPassword"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="CofimPassword" placeholder="Password">
                <span class="text-danger" asp-validation-for="CofimPassword"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label  text-white" asp-for="RoleId"></label>         
                <select class="col-sm-10" asp-for="RoleId">
                    <option value="">Select a role</option>
                    @if (roles != null && roles.Any())
                    {
                        @foreach (var pb in roles)
                        {
                            <option value="@pb.Id">@pb.Name</option>
                        }

                    }
                </select>
                <span class="text-danger" asp-validation-for="RoleId"></span>
     
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-info ">CreateUser<i class="fas fa-heart ml-2" aria-hidden="true"></i></button>
                <a class="btn btn-primary mx-2" asp-controller="User" asp-action="Index">Back</a>
            </div>
        </div>
    </form>
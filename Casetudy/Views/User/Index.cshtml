@model IEnumerable<UserViewsModel>;

@{
    ViewBag.Title = "User ViewsModel";
}


            <div class="container-fluid">
                <div class="card">
                    <h3 class="card-header text-center font-weight-bold text-uppercase py-2">User</h3>
                    <div class="card-body">
                        <div class="table-editable">
                            <span class="table-add float-right mb-3 mr-2">
                                <a asp-controller="User" asp-action="Create" class="text-success">
                                    <i class="fas fa-plus fa-2x" aria-hidden="true"></i>
                                </a>
                            </span>
                            <table id="table" class="table table-bordered table-responsive-md table-striped text-center">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Email</th>
                                        <th>RoleName</th>
                                        <th>Sort</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        @foreach (var role in Model)
                                        {
                                            <tr>
                                                <td>@role.UserID</td>
                                                <td>@role.Email</td>
                                                <td>@role.RoleName</td>
                                                <td class="pt-3-half">
                                                    <span class="table-up">
                                                        <a href="#!" class="indigo-text">
                                                            <i class="fas fa-long-arrow-alt-up"
                                                               aria-hidden="true"></i>
                                                        </a>
                                                    </span>
                                                    <span class="table-down">
                                                        <a href="#!" class="indigo-text">
                                                            <i class="fas fa-long-arrow-alt-down"
                                                               aria-hidden="true"></i>
                                                        </a>
                                                    </span>
                                                </td>
                                                <td>
                                                    @if (User.IsInRole("Admin"))
                                                    {
                                                        <span class="table-remove">
                                                            <a asp-controller="User" asp-action="Edit" asp-route-id="@role.UserID" class="btn btn-success">Edit</a>
                                                            <a asp-controller="User" asp-action="Delete" class="btn btn-danger" asp-route-id="@role.UserID">Delete</a>
                                                        </span>
                                                    }

                                                </td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
       

    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>





@section Scripts{

    <script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#table td").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}




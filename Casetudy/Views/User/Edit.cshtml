@model UserEditViewsModel
@{
    ViewBag.Title = "Edit UserViewsModel";
    var role = ViewBag.Role as IQueryable<IdentityRole>;
}

<div class="container">
    <form asp-controller="User" asp-action="Edit" method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <label class="col-sm-2  text-white" asp-for="Email"></label>
            <input class="col-sm-10" asp-for="Email" />
            <span class="text-danger ml-auto" asp-validation-for="Email"></span>
        </div>      
        <div class="form-group row">
            <div class="col-2">
                <label class=" text-white" asp-for="RoleId"></label>
            </div>
            <div class="col-10">
                <select asp-for="RoleId" class="custom-file">
                    <option value="">Select a role</option>
                    @if (role != null && role.Any())
                    {
                        foreach (var pb in role)
                        {
                            <option value="@pb.Id" selected="@(pb.Id == @Model.Id)">@pb.Name</option>
                        }
                    }
                </select>
            </div>

        </div>

        <div class="form-group row">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-danger mx-2 my-3">Edit</button>
                <a class="btn btn-primary mx-2" asp-controller="User" asp-action="Index">Cancel</a>
            </div>
        </div>
    </form>
</div>

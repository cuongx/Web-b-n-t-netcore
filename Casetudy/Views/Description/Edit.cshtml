@model  DescriptionEditViewsModel;
    @{
        Layout = "~/Views/Shared/_Admin.cshtml";
        ViewBag.Title = "Edit Description ViewsModel";
    }

    <form asp-controller="Description" asp-action="Edit" method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-sm-12">
                <label class="ml-3 mx-3" asp-for="Name" style="color:crimson"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-info ">Update<i class="fas fa-heart ml-2" aria-hidden="true"></i></button>
                <a class="btn btn-success" asp-controller="Description" asp-action="Index">Cancel</a>
            </div>
        </div>
    </form>
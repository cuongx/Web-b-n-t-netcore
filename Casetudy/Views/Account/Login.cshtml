@model LoginViewsModel
@{ 
    ViewBag.Title = "Login ViewsModel";
}
    <body>
        <div class="container">
            <div class="row">
                <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                    <div class="card card-signin my-5">
                        <div class="card-body">
                            <h5 class="card-title text-center">Sign In</h5>
                            <form class="form-signin" asp-controller="Account" asp-action="Login" method="post">
                                <div class="text-danger" asp-validation-summary="All"></div>
                                <input hidden asp-for="ReturnUrl" value="@ViewBag.ReturnUrl" />
                                <div class="form-label-group">
                                    <input type="email" asp-for="Email" class="form-control" placeholder="Email address" >
                                    <label asp-for="Email"></label>
                                    <span asp-validation-for="Email"></span>
                                </div>

                                <div class="form-label-group">
                                    <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                                    <label asp-for="Password"></label>
                                    <span asp-validation-for="Password"></span>
                                </div>

                                <div class="custom-control custom-checkbox mb-3">
                                    <input type="checkbox" asp-for="Remember" class="custom-control-input">
                                    <label class="custom-control-label" asp-for="Remember">Remember</label>
                                </div>
                                <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign in</button>
                                <hr class="my-4">
                                <button class="btn btn-lg btn-google btn-block text-uppercase bg-primary my-2" type="submit"><i class="fab fa-google mr-2"></i> Sign in with Google</button>
                                <button class="btn btn-lg btn-facebook btn-block text-uppercase bg-primary" type="submit"><i class="fab fa-facebook-f mr-2"></i> Sign in with Facebook</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
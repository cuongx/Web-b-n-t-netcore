@model LoginViewsModel
@{
    ViewBag.Title = "Login ViewsModel";
    Layout = "~/Views/Shared/_Login.cshtml";
}
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-form-title" style="background-image: url(images/bg-01.jpg);">
                <span class="login100-form-title-1">
                    Sign In
                </span>
            </div>
            <form class="login100-form validate-form" asp-controller="Account" asp-action="Login" method="post">
                <input hidden asp-for="ReturnUrl" value="@ViewBag.ReturnUrl" />            
                <div class="wrap-input100 validate-input m-b-26" data-validate="Username is required">
                    <span class="label-input100">Email</span>
                    <input class="input100" type="text" asp-for="Email" name="Email" value="xuanc48@gmail.com" >
                    <span class="focus-input100" asp-validation-for="Email"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-18" data-validate="Password is required">
                    <span class="label-input100">Password</span>
                    <input class="input100" type="password" asp-for="Password" value="Asds1234!" >
                    <span class="focus-input100 text-danger"></span>
                </div>

                <div class="flex-sb-m w-full p-b-30">
                    <div class="contact100-form-checkbox">
                        <input class="input-checkbox100" asp-for="Remember" type="checkbox" name="Remember">
                        <label class="label-checkbox100" asp-for="Remember">
                            Remember me
                        </label>
                    </div>
                    <div>
                        <a asp-controller="Account" asp-action="Register" class="txt1">
                            Forgot Register?
                        </a>
                    </div>
                </div>

                <div class="container-login100-form-btn">
                    <button type="submit" class="login100-form-btn">
                        Login
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>











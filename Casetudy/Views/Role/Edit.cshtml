@model RoleEditViewsModel

@{
    ViewBag.Title = "Role Edit";
}

<form asp-controller="Role" asp-action="Edit" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group row">
        <div class="col-sm-12">
            <label class="ml-3 mx-3 text-white" asp-for="Name"></label>
            <input asp-for="Name" />
            @*<span asp-validation-for="RoleName" class="text-danger"></span>*@
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-info ">Update<i class="fas fa-heart ml-2" aria-hidden="true"></i></button>
            <a class="btn btn-success" asp-controller="Role" asp-action="Index">Cancle</a>
        </div>
    </div>

</form>
@model OrderCreateViewsModel;
@{
    @if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_Admin.cshtml";
    };
           ViewBag.Title = "Create OrderViews";
           var order = ViewBag.Order as List<Employees>;
}

<form enctype="multipart/form-data" asp-controller="Order" asp-action="Create" method="post">
    @*<div class="text-danger" asp-validation-summary="All"></div>*@
    <input hidden value="@ViewBag.User" class="form-control" asp-for="OrderId" placeholder="OrderId">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label text-white" asp-for="Name"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name" placeholder="Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label text-white" asp-for="Phone"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Phone" placeholder="Phone">
            <span class="text-danger" asp-validation-for="Phone"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label text-white" asp-for="Date"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Date" placeholder="Date">
            <span class="text-danger" asp-validation-for="Date"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label text-white" asp-for="CarName"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="CarName" placeholder="CarName">
            <span class="text-danger" asp-validation-for="CarName"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label text-white" asp-for="Color"></label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="Color" placeholder="Color">
                <option value="">Select Color</option>
                <option value="Red">Red</option>
                <option value="Black">Black</option>
                <option value="Blue">Blue</option>
                <option value="White">White</option>
            </select>
            <span class="text-danger" asp-validation-for="Color"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label text-white" asp-for="City"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="City" placeholder="City">
            <span class="text-danger" asp-validation-for="City"></span>
        </div>

    </div>
    <div class="form-group row">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-info">Send<i class="fas fa-heart ml-2" aria-hidden="true"></i></button>
            <a class="btn btn-primary mx-2" asp-controller="Home" asp-action="Index">Cancel</a>
        </div>
    </div>
</form>

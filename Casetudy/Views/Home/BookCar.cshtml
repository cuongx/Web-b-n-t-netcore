@model OrderCreateViewsModel;
@{
    ViewBag.Title = "Create OrderViews";
    //var avatarPath = $"/images/{(Model.Avatar ?? "cd-5.jpg")}";
}

    <form enctype="multipart/form-data" asp-controller="Order" asp-action="Create" method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label text-white" asp-for="Name"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Name" placeholder="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label text-white" asp-for="Phone"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Phone" placeholder="Phone">
                <span class="text-danger" asp-validation-for="Phone"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Date"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Date" placeholder="Date">
                <span class="text-danger" asp-validation-for="Date"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label text-white" asp-for="CarName"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="CarName" placeholder="CarName">
                <span class="text-danger" asp-validation-for="CarName"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label text-white" asp-for="City"></label>
            <select class="col-sm-10" asp-for="City">
                <option value="">Tp Huế</option>
                <option value="">Tp Đà Nẵng</option>
                <option value="">Tp HCM</option>
                <option value="">Tp Hà Nội</option>
                <option value="">Tp Cần Thơ</option>
                <option value="">Tp Hải Phòng</option>
            </select>
            <span class="text-danger" asp-validation-for="City"></span>
        </div>

        @*<div class="row col-4 offset-4">
            <img src="@avatarPath" class="myImage" style="height:250px" ;width="auto" asp-append-version="true" />
        </div>*@
        <div class="form-group row">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-info ">Send<i class="fas fa-heart ml-2" aria-hidden="true"></i></button>
                <a class="btn btn-primary mx-2" asp-controller="Order" asp-action="Index">Back</a>
            </div>
        </div>
    </form>
